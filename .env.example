# ============================================================
# CONFIGURACIÓN DE DESARROLLO - GMAO Sistema
# ============================================================
# IMPORTANTE: NO commitear este archivo con valores reales
# Copiar a .env y personalizar para desarrollo local
# En producción, los secrets se obtienen de Google Cloud Secret Manager
# ============================================================

# -------------------- FLASK --------------------
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=True

# -------------------- SEGURIDAD --------------------
# En desarrollo: usar .env local
# En producción: se obtiene de Google Cloud Secret Manager
# Para generar: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=tu_clave_secreta_muy_segura_aqui_genera_una_nueva

# -------------------- BASE DE DATOS --------------------
# Tipo de BD: 'sqlite' (desarrollo) o 'postgresql' (producción)
DB_TYPE=sqlite

# PostgreSQL (solo si DB_TYPE=postgresql)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gmao_db
DB_USER=postgres
DB_PASSWORD=tu_password_aqui  # En producción: Secret Manager (gmao-db-password)

# -------------------- EMAIL / SMTP --------------------
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_app_password_aqui  # En producción: Secret Manager (gmao-mail-password)
ADMIN_EMAILS=admin@ejemplo.com

# Para obtener App Password de Gmail:
# https://myaccount.google.com/apppasswords

# -------------------- GOOGLE CLOUD --------------------
# Project ID de GCP (para Secret Manager, Cloud SQL, Storage)
GOOGLE_CLOUD_PROJECT=gmao-sistema

# Estas variables se detectan automáticamente en GCP App Engine
# No configurar manualmente:
# GAE_ENV=standard
# K_SERVICE=gmao-service

# -------------------- SERVIDOR --------------------
SERVER_URL=http://localhost:5000

# -------------------- LOGGING --------------------
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Configuración de Seguridad
SESSION_COOKIE_SECURE=False
REMEMBER_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True

# Configuración de Uploads
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=static/uploads/

# Configuración de Paginación
ITEMS_PER_PAGE=25

# Configuración de Backup
BACKUP_FOLDER=backups/
BACKUP_RETENTION_DAYS=30

# Configuración de Reportes
REPORT_FOLDER=reports/
REPORT_RETENTION_DAYS=90

# Configuración de Alertas
ALERT_CHECK_INTERVAL=3600  # segundos (1 hora)
ALERT_EMAIL_RECIPIENTS=j_hidalgo@disfood.com

# Configuración de API (si se implementa)
API_KEY=tu_api_key_segura
API_RATE_LIMIT=100  # requests por hora

# Configuración de Integraciones Externas
# OPENAI_API_KEY=tu_clave_openai_api (configurar en Secret Manager en GCP)

# Configuración de Google Cloud Platform
GOOGLE_CLOUD_PROJECT=gmao-sistema
GAE_ENV=standard
CLOUD_SQL_CONNECTION_NAME=gmao-sistema:us-central1:gmao-postgres

# Configuración de Secret Manager (GCP)
# Los siguientes valores se configuran en Google Cloud Secret Manager:
# - gmao-secret-key: Clave secreta de Flask
# - gmao-db-password: Contraseña de la base de datos
# - gmao-openai-key: API Key de OpenAI