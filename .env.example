# Configuración de Variables de Entorno para GMAO
# Copia este archivo como .env y configura los valores apropiados

# Configuración de Flask
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=tu_clave_secreta_muy_segura_aqui_genera_una_nueva_para_produccion

# Tipo de base de datos (sqlite o postgresql)
DB_TYPE=sqlite

# Configuración SQLite (desarrollo)
# No requiere configuración adicional

# Configuración PostgreSQL (producción)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gmao_db
DB_USER=postgres
DB_PASSWORD=tu_password_seguro_aqui

# Configuración de sesiones
SESSION_COOKIE_SECURE=False  # Cambiar a True en producción con HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Configuración de Correo (opcional)
MAIL_SERVER=mail.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=j_hidalgo@disfood.com 
MAIL_PASSWORD=dvematimfpjjpxji

# Configuración de Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Configuración de Seguridad
SESSION_COOKIE_SECURE=False
REMEMBER_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True

# Configuración de Uploads
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=static/uploads/

# Configuración de Paginación
ITEMS_PER_PAGE=25

# Configuración de Backup
BACKUP_FOLDER=backups/
BACKUP_RETENTION_DAYS=30

# Configuración de Reportes
REPORT_FOLDER=reports/
REPORT_RETENTION_DAYS=90

# Configuración de Alertas
ALERT_CHECK_INTERVAL=3600  # segundos (1 hora)
ALERT_EMAIL_RECIPIENTS=j_hidalgo@disfood.com

# Configuración de API (si se implementa)
API_KEY=tu_api_key_segura
API_RATE_LIMIT=100  # requests por hora

# Configuración de Integraciones Externas
# OPENAI_API_KEY=tu_clave_openai_api (configurar en Secret Manager en GCP)

# Configuración de Google Cloud Platform
GOOGLE_CLOUD_PROJECT=gmao-sistema
GAE_ENV=standard
CLOUD_SQL_CONNECTION_NAME=gmao-sistema:us-central1:gmao-postgres

# Configuración de Secret Manager (GCP)
# Los siguientes valores se configuran en Google Cloud Secret Manager:
# - gmao-secret-key: Clave secreta de Flask
# - gmao-db-password: Contraseña de la base de datos
# - gmao-openai-key: API Key de OpenAI