# Configuración de Variables de Entorno para GMAO
# Copia este archivo como .env y configura los valores apropiados

# Configuración de Flask
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=tu_clave_secreta_muy_segura_aqui

# Configuración de Base de Datos
# Para desarrollo local (SQLite)
DATABASE_URL=sqlite:///instance/database.db

# Para producción (PostgreSQL/MySQL)
# DATABASE_URL=postgresql://usuario:password@localhost:5432/gmao_db
# DATABASE_URL=mysql://usuario:password@localhost:3306/gmao_db

# Configuración de Correo (opcional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_password_de_aplicacion

# Configuración de Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Configuración de Seguridad
SESSION_COOKIE_SECURE=False
REMEMBER_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True

# Configuración de Uploads
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=static/uploads/

# Configuración de Paginación
ITEMS_PER_PAGE=25

# Configuración de Backup
BACKUP_FOLDER=backups/
BACKUP_RETENTION_DAYS=30

# Configuración de Reportes
REPORT_FOLDER=reports/
REPORT_RETENTION_DAYS=90

# Configuración de Alertas
ALERT_CHECK_INTERVAL=3600  # segundos (1 hora)
ALERT_EMAIL_RECIPIENTS=admin@gmao.com,tecnico@gmao.com

# Configuración de API (si se implementa)
API_KEY=tu_api_key_segura
API_RATE_LIMIT=100  # requests por hora

# Configuración de Integraciones Externas
# OPENAI_API_KEY=tu_openai_key (si usas IA)
# TELEGRAM_BOT_TOKEN=tu_telegram_token (si usas Telegram)
# SLACK_WEBHOOK_URL=tu_slack_webhook (si usas Slack)